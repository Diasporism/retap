!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %script{:src => "http://code.createjs.com/createjs-2013.05.14.min.js"}
    %title= content_for?(:title) ? yield(:title) : "Re-Tap"
    %meta{:content => "", :name => "Social Beer Recommendations"}
    %meta{:content => "", :name => "Logan Sears"}
    = stylesheet_link_tag "application", "http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css", :media => "all"
    = javascript_include_tag "application", "http://code.createjs.com/createjs-2013.05.14.min.js"
    = favicon_link_tag 'favicon.ico'
    = csrf_meta_tags
    = yield(:head)
  %body{:class => @splash ? 'splash' : ''}
    #main{:role => "main"}
      = yield
    %footer
      = render 'layouts/footer'
