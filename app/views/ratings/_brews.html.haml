.row.center-in-span
  .brew-list
    - @brews.each do |brew|
      .span3.text-center.brew
        = image_tag 'bottle.svg'
        .br
        = brew.name
        .br
        = brew.brewery
        .br
        .btn-group
          .btn.btn-small
            = link_to 'Love', ratings_path(brew_id: brew.id, rating: true), {action: :create, method: :post, class: 'rate_url'}
          .btn.btn-small
            = link_to 'Hate', ratings_path(brew_id: brew.id, rating: false), {action: :create, method: :post, class: 'rate_url'}

